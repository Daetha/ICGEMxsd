<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://icgem.gfz.de/schema" xmlns:icgem="http://icgem.gfz.de/schema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:annotation>
        <xs:documentation>
            Input Data Source Type Definition
            Defines the enumerated types for possible data sources used in gravity field models.
        </xs:documentation>
    </xs:annotation>
	<!-- Simple type for input data source enumeration -->
	<xs:simpleType name="inputDataSourceType">
		<xs:restriction base="xs:string">
			<xs:enumeration value="Satellite">
				<xs:annotation>
					<xs:documentation>Satellite-based gravity observations and measurements</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Altimetry">
				<xs:annotation>
					<xs:documentation>Satellite altimetry data</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Ground data">
				<xs:annotation>
					<xs:documentation>Ground-based gravity measurements</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Elevation/Terrain">
				<xs:annotation>
					<xs:documentation>Elevation and terrain model data</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
			<xs:enumeration value="Model">
				<xs:annotation>
					<xs:documentation>Reference model data</xs:documentation>
				</xs:annotation>
			</xs:enumeration>
		</xs:restriction>
	</xs:simpleType>
</xs:schema>
