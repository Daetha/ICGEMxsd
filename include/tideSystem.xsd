<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           version="1"
           targetNamespace="http://icgem.gfz.de/schema"
           xmlns="http://icgem.gfz.de/schema"
           elementFormDefault="qualified">
  <xs:annotation>
    <xs:documentation>Tide system conventions for gravity field models</xs:documentation>
  </xs:annotation>
  
  <xs:simpleType name="tideSystem">
    <xs:restriction base="xs:string">
      <xs:enumeration value="Tide-free">
        <xs:annotation>
          <xs:documentation>Tide-free system (permanent tide removed)</xs:documentation>
        </xs:annotation>
      </xs:enumeration>
      <xs:enumeration value="Zero-tide">
        <xs:annotation>
          <xs:documentation>Zero-tide system</xs:documentation>
        </xs:annotation>
      </xs:enumeration>
      <xs:enumeration value="Mean-tide">
        <xs:annotation>
          <xs:documentation>Mean-tide system (average tidal effect)</xs:documentation>
        </xs:annotation>
      </xs:enumeration>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>